<h1 class="text-center pb-3"><%= @list.name %></h1>
<p class="text-center pb-3"><%= link_to "Back to all lists", lists_path, class: "btn btn-outline-primary" %> <%= link_to "Add a new movie to this list", bookmarks_new_path, class: "btn btn-primary" %></p>
<div class="row justify-content-evenly">
  <% @list.bookmarks.each do |item| %>
    <div class="card col-3 p-3 m-5">
      <p class="card-text"><strong>Added to list on:</strong> <%= item.created_at.strftime("%b %d %Y") %></p>
      <p class="card-text"><strong>Comment:</strong> <%= item.comment %></p>
      <img src=<%= item.movie.poster_url %> class="card-img-top" alt="<%= item.movie.title %>">
      <div class="card-body">
      <h5 class="card-title fw-bold"><%= item.movie.title %></h5>
      <p class="card-text"><%= item.movie.overview %></p>
      <p class="card-text">Rating: <strong><%= item.movie.rating %> ⭐️</strong></p>
      <div class="row">
        <%= link_to "Remove from list", bookmark_path(item), class: "btn btn-sm btn-danger text-white", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
      </div>
    </div>
  <% end %>
</div>
